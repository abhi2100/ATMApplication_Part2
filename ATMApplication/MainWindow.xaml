<Window x:Class="ATMApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATM Application" Height="350" Width="525">
    <Grid>
        <TextBlock Text="Welcome to the ATM Application" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <Button x:Name="btnCreateAccount" Content="Create Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,50,0,0" Click="btnCreateAccount_Click"/>
        <Button x:Name="btnSelectAccount" Content="Select Account" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,100,0,0" Click="btnSelectAccount_Click"/>
    </Grid>
</Window>
