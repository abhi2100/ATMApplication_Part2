<Window x:Class="ATMApplication.Createaccountwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account" Height="350" Width="400">
    <Grid>
        <Label Content="Account Number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAccountNumber" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="200"/>
        
        <Label Content="Account Holder Name:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAccountHolderName" HorizontalAlignment="Left" Margin="120,40,0,0" VerticalAlignment="Top" Width="200"/>
        
        <Label Content="Initial Deposit:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInitialDeposit" HorizontalAlignment="Left" Margin="120,70,0,0" VerticalAlignment="Top" Width="200"/>
        
        <Label Content="Interest Rate:" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInterestRate" HorizontalAlignment="Left" Margin="120,100,0,0" VerticalAlignment="Top" Width="200"/>
        
        <Button x:Name="btnCreateAccount" Content="Create Account" HorizontalAlignment="Left" Margin="120,130,0,0" VerticalAlignment="Top" Width="100" Click="btnCreateAccount_Click"/>
    </Grid>
</Window>
