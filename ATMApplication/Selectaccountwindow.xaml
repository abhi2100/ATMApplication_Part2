<Window x:Class="ATMApplication.SelectAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Account" Height="300" Width="400">
    <Grid>
        <Label Content="Account Number:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAccountNumber" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="200"/>

        <Button x:Name="btnSelectAccount" Content="Select Account" HorizontalAlignment="Left" Margin="120,40,0,0" VerticalAlignment="Top" Width="100" Click="btnSelectAccount_Click"/>
    </Grid>
</Window>
